			Thread.sleep(1000);
			
			texto = "left";
			driver.findElement(By.className(texto)).click();
			System.out.println(ANSI_GREEN + "✅ Clicou - class: " + texto);
			
			Thread.sleep(1000);
			
			texto = "right";
			driver.findElement(By.className(texto)).click();
			System.out.println(ANSI_GREEN + "✅ Clicou - class: " + texto);
			
